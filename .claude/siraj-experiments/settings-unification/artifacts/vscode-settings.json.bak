{
  // ============================================
  // CORE EDITOR SETTINGS
  // ============================================
  "editor.fontSize": 14,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modificationsIfAvailable",
  "editor.formatOnPaste": true,
  "editor.linkedEditing": true,
  "editor.inlayHints.enabled": "off",
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 120,
  "editor.guides.indentation": false,
  "editor.guides.bracketPairs": false,

  // Default formatter for general files (HTML, JSON, etc)
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.singleQuote": true,

  // ============================================
  // PYTHON LANGUAGE SETTINGS
  // ============================================
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "diffEditor.ignoreTrimWhitespace": false
  },
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoImportUserSymbols": true,

  // ============================================
  // ELIXIR LANGUAGE SETTINGS
  // ============================================
  "[elixir]": {
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "[phoenix-heex]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "elixirLS.suggestSpecs": false,
  "elixirLS.dialyzerEnabled": true,
  "elixirLS.signatureAfterComplete": false,
  "elixirLS.fetchDeps": false,

  // Emmet support for Elixir templates
  "emmet.includeLanguages": {
    "elixir": "html",
    "phoenix-heex": "html"
  },
  "emmet.triggerExpansionOnTab": true,

  // ============================================
  // HTML/MARKDOWN LANGUAGE SETTINGS
  // ============================================
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "diffEditor.ignoreTrimWhitespace": true
  },

  // ============================================
  // AI ASSISTANT SETTINGS
  // ============================================
  // Editor inline suggestions (AI autocomplete)
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.showToolbar": "always",
  "editor.inlineSuggest.suppressSuggestions": false,

  // GitHub Copilot
  "github.copilot.enable": {
    "*": false,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "elixir": false,
    "phoenix-heex": false
  },

  // ============================================
  // GIT SETTINGS
  // ============================================
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.ignoreRebaseWarning": true,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",

  // ============================================
  // GITLENS SETTINGS
  // ============================================
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.terminalLinks.enabled": false,
  "gitlens.views.commitDetails.files.layout": "tree",
  "gitlens.views.branches.branches.layout": "list",

  // ============================================
  // GITHUB SETTINGS
  // ============================================
  "githubPullRequests.pullBranch": "never",

  // ============================================
  // JUPYTER/NOTEBOOK SETTINGS
  // ============================================
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "right"
  },
  "notebook.formatOnSave.enabled": true,
  "notebook.undoRedoPerCell": false,
  "notebook.showFoldingControls": "always",
  "notebook.output.wordWrap": true,
  "notebook.formatOnCellExecution": true,
  "notebook.stickyScroll.enabled": true,
  "notebook.output.scrolling": true,
  "notebook.output.textLineLimit": 10,
  "notebook.lineNumbers": "on",
  "notebook.outline.showCodeCellSymbols": false,
  "notebook.diff.ignoreOutputs": true,
  "notebook.diff.ignoreMetadata": true,
  "notebook.defaultFormatter": "esbenp.prettier-vscode",
  "jupyter.interactiveWindow.creationMode": "perFile",
  "jupyter.askForKernelRestart": false,
  "interactiveWindow.executeWithShiftEnter": true,

  // ============================================
  // CODE RUNNER SETTINGS
  // ============================================
  "code-runner.saveFileBeforeRun": true,
  "code-runner.customCommand": "cd $dir && elixir $fileName",
  "code-runner.clearPreviousOutput": true,
  "code-runner.showExecutionMessage": false,
  "code-runner.executorMapByFileExtension": {
    ".exs": "elixir"
  },

  // ============================================
  // WORKBENCH SETTINGS
  // ============================================
  "workbench.startupEditor": "none",
  "workbench.editorAssociations": {
    "*.db": "sqlite-viewer.option",
    "git-rebase-todo": "gitlens.rebase"
  },
  "workbench.settings.useSplitJSON": true,
  "workbench.colorTheme": "Monokai",
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#1073cf2d",
    "editor.lineHighlightBorder": "#9fced11f"
  },
  "workbench.editor.enablePreviewFromCodeNavigation": true,
  "workbench.secondarySideBar.defaultVisibility": "hidden",

  // ============================================
  // FILE EXPLORER SETTINGS
  // ============================================
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.patterns": {
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },

  // ============================================
  // FILE ASSOCIATIONS
  // ============================================
  "files.associations": {
    "*.heex": "phoenix-heex",
    "*.qmd": "markdown"
  },

  // ============================================
  // TERMINAL SETTINGS
  // ============================================
  "terminal.integrated.fontSize": 14,

  // ============================================
  // TESTING SETTINGS
  // ============================================
  "testing.autoRun.delay": 10,
  "testing.followRunningTest": false,
  "testing.openTesting": "neverOpen",
  "testing.automaticallyOpenTestResults": "neverOpen",
  "debug.onTaskErrors": "showErrors",

  // ============================================
  // DIFF EDITOR SETTINGS
  // ============================================
  "diffEditor.renderSideBySide": false,
  "diffEditor.wordWrap": "off",
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.experimental.showMoves": true,

  // ============================================
  // PERFORMANCE OPTIMIZATIONS
  // ============================================
  "editor.largeFileOptimizations": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.git": true,
    "**/.elixir_ls": true,
    "**/deps": true,
    "**/_build": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
