    "**/node_modules/**": true,
    "**/.elixir_ls/**": true,
    "**/deps/**": true,
    "**/_build/**": true
  },

  // ============================================
  // EXTENSION SETTINGS - MISC
  // ============================================
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "security.workspace.trust.untrustedFiles": "open",
  "remote.SSH.defaultExtensions": ["gitpod.gitpod-remote-ssh"],

