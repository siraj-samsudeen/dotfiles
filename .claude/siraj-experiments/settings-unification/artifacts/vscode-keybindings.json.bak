// Place your key bindings in this file to override the defaultsauto[]
[
  {
    "key": "alt+w",
    "command": "editor.emmet.action.wrapWithAbbreviation"
  },
  {
    "key": "cmd+r",
    "command": "workbench.action.reloadWindow"
  },
  {
    "key": "shift+cmd+k",
    "command": "-quarto.previewScript",
    "when": "quartoRenderScriptActive"
  },
  {
    "key": "shift+cmd+k",
    "command": "-quarto.preview",
    "when": "!quartoRenderScriptActive"
  },
  {
    "key": "shift+enter",
    "command": "-python.execSelectionInTerminal",
    "when": "editorTextFocus && !findInputFocussed && !jupyter.ownsSelection && !notebookEditorFocused && !replaceInputFocussed && editorLangId == 'python' && activeEditor != 'workbench.editor.interactive'"
  },
  {
    "key": "shift+cmd+,",
    "command": "erb.toggleTags",
    "when": "editorLangId == phoenix-heex or elixir"
},
{
    "key": "shift+enter",
    "command": "workbench.action.terminal.sendSequence",
    "args": {
        "text": "\\\r\n"
    },
    "when": "terminalFocus"
}
]
